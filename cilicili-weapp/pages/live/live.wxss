.live-header {
    transform: translateY(-10rpx);
    font-size: 30rpx;
    font-weight: 500;
    letter-spacing: 1px;
    color: #ffffff;
}

.live-swiper {
    border-radius: 20rpx !important;
    height: 330rpx;
}

.swiper-t {
    display: flex;
    margin-left: 37vw;
    margin-bottom: 50rpx;
}

.swiper-t-item {
    width: 15rpx;
    border-radius: 50%;
    height: 15rpx;
    background: #0066ff;
    margin-left: 20rpx;
}

.active {
    width: 50rpx;
    border-radius: 20rpx;
}

.content {
    padding: 0 20rpx;
    margin-top: 30rpx;
}

.card-image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.room-card {
    margin-bottom: 25rpx;
}

.room-card-image {
    width: 100%;
    height: 200rpx;
    border-radius: 15rpx;
}

.room-card-t {
    color: rgba(256, 256, 256, .9);
    padding-top: 5rpx;
    padding-left: 5rpx;
    font-weight: 500;
    font-size: 24rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.room-card-d {
    padding-top: 2px;
    font-size: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    padding-left: 5rpx;
    text-overflow: ellipsis;
}